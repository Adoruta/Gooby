#!/bin/bash

source /opt/GooPlex/menus/variables.sh

sudo mkdir -p $CONFIGS/.config
echo "echo '1.1.3' > $CONFIGS/.config/version" | sudo bash

[ ! -f $CONFIGS/.config/publicip ] && curl ifconfig.me > $CONFIGS/.config/publicip
[ ! -f $CONFIGS/.config/seturl ] && curl ifconfig.me > $CONFIGS/.config/seturl
[ ! -f $CONFIGS/.config/setemail ] && curl ifconfig.me > $CONFIGS/.config/setemail

if [ "$EUID" -ne 0 ]; then

	sudo chown -R $USER:$USER $CONFIGS/.config
	/opt/GooPlex/menus/main.sh

else

	/opt/GooPlex/install/server/user-create.sh

fi
