#!/bin/bash

source /opt/GooPlex/menus/variables.sh

if [ ! -f $CONFIGS/.config/version ]; then

	sudo mkdir -p /var/local/GooPlex/.config
	sudo sh -c 'echo "1.1.2" > version'

fi

if [ ! -f $CONFIGS/.config/publicip ]; then

	sudo mkdir -p /var/local/GooPlex/.config
	curl ifconfig.me >  $CONFIGS/.config/publicip

fi

if [ ! -f $CONFIGS/.config/seturl ]; then

	sudo mkdir -p /var/local/GooPlex/.config
	sudo touch $CONFIGS/.config/seturl

fi

if [ ! -f $CONFIGS/.config/setemail ]; then

	sudo mkdir -p /var/local/GooPlex/.config
	sudo touch $CONFIGS/.config/setemail

fi

if [ "$EUID" -ne 0 ]; then

	/opt/GooPlex/menus/main.sh

else

	/opt/GooPlex/install/server/user-create.sh

fi
