#!/bin/bash

source /opt/GooPlex/menus/variables.sh

if [ ! -f $CONFIGS/.config/publicip ]; then
	sudo mkdir -p /var/local/GooPlex/.config
	curl ifconfig.me >  $CONFIGS/.config/publicip
fi

if [ "$EUID" -ne 0 ]; then

	sudo chown -R $USER:$USER $CONFIGS/.config
	echo "1.1.3" > $CONFIGS/.config/version
	touch $CONFIGS/.config/seturl
	touch $CONFIGS/.config/setemail
	/opt/GooPlex/menus/main.sh

else

	/opt/GooPlex/install/server/user-create.sh

fi
