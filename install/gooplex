#!/bin/bash

source /opt/GooPlex/menus/variables.sh

if [ "$EUID" -ne 0 ]; then

	if [ ! -e $CONFIGS/Docker/.env ]; then

		sudo mkdir -p $CONFIGS/.config
		sudo mkdir -p $CONFIGS/Docker
		sudo chown -R $USER:$USER $CONFIGS
		echo "Not set yet" > $CONFIGS/.config/mydomain
		echo "Not set yet" > $CONFIGS/.config/myemail
		source /opt/GooPlex/misc/environment-build.sh

	fi
	
	/opt/GooPlex/menus/main.sh

else

	/opt/GooPlex/install/server/user-create.sh

fi
